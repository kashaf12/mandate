{
  "name": "mandate-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Mandate SDK - Runtime enforcement for AI agent authority",
  "author": "Kashaf Ahmed <kashafaahmed@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kashaf12/mandate.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "sdk:build": "pnpm --filter @mandate/sdk build",
    "sdk:test": "pnpm sdk:docker:start && pnpm --filter @mandate/sdk test",
    "sdk:test:watch": "pnpm --filter @mandate/sdk test:watch",
    "sdk:test:coverage": "pnpm sdk:docker:start && pnpm --filter @mandate/sdk test:coverage",
    "sdk:test:integration": "pnpm sdk:docker:start && pnpm --filter @mandate/sdk test:integration",
    "sdk:type-check": "pnpm --filter @mandate/sdk type-check",
    "sdk:clean": "pnpm --filter @mandate/sdk clean",
    "sdk:docker:start": "cd packages/sdk && docker compose up -d",
    "sdk:docker:stop": "cd packages/sdk && docker compose down",
    "sdk:docker:logs": "cd packages/sdk && docker compose logs -f redis",
    "sdk:docker:status": "docker ps --filter name=redis --format 'table {{.Names}}\t{{.Status}}\t{{.Ports}}'",
    "backend:build": "pnpm --filter @mandate/backend build",
    "backend:start": "pnpm --filter @mandate/backend start",
    "backend:dev": "pnpm --filter @mandate/backend start:dev",
    "backend:test": "pnpm --filter @mandate/backend test",
    "backend:test:watch": "pnpm --filter @mandate/backend test:watch",
    "backend:test:cov": "pnpm --filter @mandate/backend test:cov",
    "backend:test:e2e": "pnpm --filter @mandate/backend test:e2e",
    "backend:db:generate": "pnpm --filter @mandate/backend db:generate",
    "backend:db:migrate": "pnpm --filter @mandate/backend db:migrate",
    "backend:db:studio": "pnpm --filter @mandate/backend db:studio",
    "backend:docker:start": "cd apps/backend && docker compose up -d",
    "backend:docker:stop": "cd apps/backend && docker compose down",
    "backend:docker:dev": "cd apps/backend && docker compose -f docker-compose.dev.yml up -d",
    "examples:run": "pnpm --filter @mandate/examples run:all-examples"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
