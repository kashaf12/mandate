{
  "name": "mandate-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Mandate SDK - Runtime enforcement for AI agent authority",
  "author": "Kashaf Ahmed <kashafaahmed@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kashaf12/mandate-sdk.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @mandate/sdk build",
    "test": "pnpm --filter @mandate/sdk test",
    "test:watch": "pnpm --filter @mandate/sdk test:watch",
    "test:coverage": "pnpm --filter @mandate/sdk test:coverage",
    "type-check": "pnpm --filter @mandate/sdk type-check",
    "examples": "pnpm --filter @mandate/examples run:all-examples",
    "clean": "pnpm --filter @mandate/sdk clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
