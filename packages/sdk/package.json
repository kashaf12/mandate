{
  "name": "@mandate/sdk",
  "version": "0.1.0",
  "description": "Runtime enforcement for AI agent authority - mechanically enforce budgets, permissions, and rate limits",
  "author": "Kashaf Ahmed <kashafaahmed@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/kashaf12/mandate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kashaf12/mandate-sdk.git",
    "directory": "packages/sdk"
  },
  "bugs": {
    "url": "https://github.com/mandate-dev/mandate-sdk/issues"
  },
  "keywords": [
    "ai",
    "agents",
    "llm",
    "authorization",
    "enforcement",
    "governance",
    "budget",
    "rate-limiting",
    "cost-tracking",
    "audit",
    "kya",
    "mandate",
    "policy-engine",
    "security",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node scripts/fix-imports.mjs && node scripts/copy-lua.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build && pnpm test",
    "clean": "rm -rf dist",
    "redis:start": "docker compose up -d",
    "redis:stop": "docker compose down",
    "redis:logs": "docker compose logs -f redis",
    "test:redis": "docker compose up -d && pnpm test tests/state/redis.test.ts && docker compose down",
    "test:integration": "pnpm redis:start && vitest run tests/integration && pnpm redis:stop"
  },
  "dependencies": {
    "ioredis": "^5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "openai": "^4.20.0"
  },
  "peerDependenciesMeta": {
    "openai": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
